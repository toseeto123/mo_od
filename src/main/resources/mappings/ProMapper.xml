<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="ProDAO">
	
	
	
	<select id="selectProList" resultType="kr.co.mood.Product.VO.ProVO">
		select * from product
	</select>
	
	<select id="selectProOne" resultType="kr.co.mood.Product.VO.ProVO">
		select * from product where pro_number = #{pro_number}
	</select>
	
	
	<insert id="insert" parameterType="kr.co.mood.Product.VO.ProVO">
 	insert into product 
  	(pro_name,pro_desc1,pro_desc2,pro_option1,pro_option2,pro_option3) 
  	values 
  	(#{pro_name},#{pro_desc1},#{pro_desc2},#{pro_option1},#{pro_option2},#{pro_option3}); 
  </insert>
  
  <!-- 주문 정보 -->
	<insert id="payInfo" parameterType="kr.co.mood.Product.VO.paymentVO">
 	 insert into payment_list (payment_id,userId,payment_Rec,user_Adr,phone,pro_paycount)
 	 value (#{payment_id}, #{userId},#{payment_Rec},#{user_Adr},#{phone},#{pro_paycount})
   </insert>
   
   <!-- 주문 상세정보 추가예정 -->
</mapper>